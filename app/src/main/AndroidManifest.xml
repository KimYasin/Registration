<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kimyasin.registration">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/notepadicon"
            android:label="@string/app_name"
            android:roundIcon="@drawable/notepadicon"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Splash"
                    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                    android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity">
        </activity>

        <activity android:name=".CreateAccountActivity"></activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".AddNotes"></activity>
        <activity android:name=".ForgotPasswordActivity"></activity>
    </application>

</manifest>